---
import type { Document } from '@contentful/rich-text-types';
import { client } from '../../helpers/contentful';
import Layout from '../../layouts/Layout.astro';
import type { EntryFieldTypes } from 'contentful';

interface Category {
  fields: {
    name: EntryFieldTypes.Text;
  };
}

interface Page {
  contentTypeId: 'page';
  fields: {
    name: EntryFieldTypes.Text;
    body1: EntryFieldTypes.RichText;
    mainArtworkUrl: EntryFieldTypes.AssetLink;
    category: EntryFieldTypes.EntryLink<Category>;
    metaDescription: EntryFieldTypes.Text;
  };
}

// Function to fetch all pages
async function fetchPages() {
  const entries = await client.getEntries({
    content_type: 'page', // Make sure this matches the ID of your content model
  });
  console.log('enteries', entries);
  return entries.items;
}

// Fetch the pages and make them available in the Astro component
const pages: Page[] = await fetchPages();
