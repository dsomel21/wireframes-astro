---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="extra-headers" />
  </head>
  <body class="px-4 py-8 sm:px-6 lg:px-8">
    <slot />
  </body>
</html>

<style is:global>
  /* Apply Sant Lipi font to Gurmukhi Unicode range */
  @font-face {
    font-family: 'Sant Lipi';
    unicode-range: U+0A00-0A7F; /* Gurmukhi Unicode range */
    font-weight: 100 900;
  }

  /* Apply Sant Lipi font to all Gurmukhi Unicode elements */
  body,
  p,
  span,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: 'Sant Lipi';
  }
</style>
